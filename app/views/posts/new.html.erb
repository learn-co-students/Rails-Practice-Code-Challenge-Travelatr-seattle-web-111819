<%= form_for @post do |f| %>
     <%= f.label "Title:" %>
     <%= f.text_field :title %><br>

     <%= f.label "Content:" %>
     <%= f.text_field :content %><br>

     <%= f.label "Blogger:" %>
     <%= f.collection_select :blogger_id, Blogger.all, :id, :name, {:prompt => "Select a Blogger"}  %><br>

     <%= f.label "Destination:" %><br>
     <%= f.collection_select :destination_id, Destination.all, :id, :name, {:prompt => "Select a destination"} %><br>

     <%= f.submit %> 
<% end %>